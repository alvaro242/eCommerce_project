{
    "openapi": "3.0.0",
    "info": {
        "title": "API documentation",
        "version": "1."
    },
    "paths": {
        "/api/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Get all categories with their subcategories",
                "operationId": "05b87e0f07999f1b2180d2dbeb4012d3",
                "responses": {
                    "200": {
                        "description": "List of categories with subcategories",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "Coffee"
                                            },
                                            "image": {
                                                "type": "string",
                                                "example": "storage/categories/coffee.png"
                                            },
                                            "subcategory": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "Brazil"
                                                        },
                                                        "parent_category": {
                                                            "type": "string",
                                                            "example": "Coffee"
                                                        },
                                                        "images": {
                                                            "type": "string",
                                                            "example": "storage/subcategories/brazil.png"
                                                        },
                                                        "created_at": {
                                                            "type": "string",
                                                            "format": "datetime",
                                                            "nullable": true
                                                        },
                                                        "updated_at": {
                                                            "type": "string",
                                                            "format": "datetime",
                                                            "nullable": true
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/category={category}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Retrieve products by category",
                "operationId": "042ae15cb9ddd43e9232916ab6179732",
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "description": "The category of the products to retrieve",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "accesories"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of products by category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Retrieve all products",
                "operationId": "d938f8cb3099af4fbdb80a0f61284841",
                "responses": {
                    "200": {
                        "description": "List of all products",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/subcategory={subcategory}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Retrieve products by subcategory",
                "operationId": "14431c70ac42e80b09d86898f69dfb5d",
                "parameters": [
                    {
                        "name": "subcategory",
                        "in": "path",
                        "description": "The subcategory of the products to retrieve",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "colombia"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of products by subcategory",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/feature={feature}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Retrieve products by extra feature",
                "operationId": "b14e1bd842aecdbf2cf60f4186543748",
                "parameters": [
                    {
                        "name": "feature",
                        "in": "path",
                        "description": "The extra feature of the products to retrieve",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "topseller"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of products by extra feature",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/id={id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Retrieve product by ID",
                "operationId": "c0a3b7a0a2b2395256ca3cfe2e501b38",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the product to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "7"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/search={input}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Search products by name",
                "operationId": "9bceb4e160c9342aa02bd92d5f6ee8c4",
                "parameters": [
                    {
                        "name": "input",
                        "in": "path",
                        "description": "The name or partial name of the product to search for",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "natural"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Search results",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No products found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "No products found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/subcategories": {
            "get": {
                "tags": [
                    "Subcategories"
                ],
                "summary": "Get all subcategories",
                "description": "Returns a list of all subcategories",
                "operationId": "c11d41fcc1c55fc68da0d3f333f0b548",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "parent_category": {
                                                "type": "string"
                                            },
                                            "images": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "datetime"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "datetime"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/subcategories/category={name}": {
            "get": {
                "tags": [
                    "Subcategories"
                ],
                "summary": "Get subcategories by category name",
                "description": "Returns subcategories filtered by parent category name. Examples of category names: accesories, coffee",
                "operationId": "f3231ec39e5a6f1046c1751f192e7a35",
                "parameters": [
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Parent category name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "parent_category": {
                                                "type": "string"
                                            },
                                            "subcategory_name": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "datetime"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "datetime"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User login",
                "operationId": "cf6cdd4140fe406a11dc479250e3b8e7",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/signup": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User registration",
                "operationId": "e21e6a924e7c86ec87f929adf46803e7",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
